<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.goShopping.ShoppingAddsActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:background="@color/colorGraydeep"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/rv_shop_adds"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_new_create"/>

    <TextView
        android:id="@+id/tv_new_create"
        android:text="新建"
        android:gravity="center"
        android:textSize="26sp"
        android:textColor="@color/col_white"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>