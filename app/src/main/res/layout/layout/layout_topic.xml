<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:id="@+id/iv_topic"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_topic_name"
        android:maxLines="1"
        android:maxEms="6"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/iv_topic"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_topic_price"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/iv_topic"
        app:layout_constraintLeft_toRightOf="@id/tv_topic_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_topic_desc"
        android:layout_marginTop="15dp"
        android:maxLines="1"
        android:maxEms="6"
        android:textColor="@color/colorGray"
        app:layout_constraintTop_toBottomOf="@id/tv_topic_name"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>